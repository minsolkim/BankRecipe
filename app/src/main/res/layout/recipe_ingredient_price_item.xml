<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/recipe_ing_price_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/recipe_ingredient_price_mart"
                android:layout_width="0dip"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="mart" />

            <TextView
                android:id="@+id/recipe_ingredient_price_ing"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ingredient" />

            <TextView
                android:id="@+id/recipe_ingredient_price_pr"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="price" />

            <TextView
                android:id="@+id/recipe_ingredient_price_volume"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="volume" />

            <TextView
                android:id="@+id/recipe_ingredient_price_date"
                android:layout_width="0dip"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="date" />

            <TextView
                android:id="@+id/recipe_ingredient_price_location"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="locatIon" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>